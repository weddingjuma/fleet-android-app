<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.mapotempo.app.EditAddressActivity">

  <android.support.v7.widget.Toolbar
      android:id="@+id/toolbar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/colorMapoBlue"
      app:popupTheme="@style/AppTheme"
      android:theme="@style/HeaderTheme"/>

  <fragment
      class="com.mapotempo.lib.fragments.mission.MissionAddressEditorFragment"
      android:id="@+id/mission_address_fragment"
      android:layout_width="match_parent"
      android:layout_height="match_parent"/>

</LinearLayout>
